{{#if successMessages}}
  <div class="alert alert-success">
    {{#each successMessages}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}
<a href="/product/form">Add Product</a>
<div class="row">
  {{#each products}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="/product/{{this._id}}/image"
           alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description">{{this.description}}</p>
        <div class="clearfix">
          <div class="price pull-left">${{this.price}}</div>
          <div class="pull-right">
            <a href="/cart/add-to-cart/{{this._id}}" class="btn btn-primary"
             role="button">Add to Cart</a>
            <div class="config">
              <a href="/product/form/{{this._id}}"><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i></a>
              <a href="/product/delete/{{this._id}}"><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>